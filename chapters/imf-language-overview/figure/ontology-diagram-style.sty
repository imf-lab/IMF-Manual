%%  patterns

\newcommand{\tikzElement}{
  \node[oClass]                                  (e) {Element};
}

\newcommand{\tikzElementsBasic}{
  \tikzElement
  \node[oClass, below left = 1cm and 2cm of e]   (b) {Block};
  \node[oClass, below = of e]                    (t) {Terminal};
  \node[oClass, below right = 1cm and 2cm of e]  (c) {Connector};
  \draw[oSpec] (b) -- (e);
  \draw[oSpec] (t) -- (e);
  \draw[oSpec] (c) -- (e);
}

\newcommand{\tikzElementsAll}{
  \tikzElementsBasic

  \node[oClass, below left   = of t] (ot) {OutputTerminal};
  \node[oClass, below        = of t] (it) {InputTerminal};
  \node[oClass, below right  = of t] (bt) {BiTerminal};

  \draw[oSpec] (it) -- (t);
  \draw[oSpec] (ot) -- (t);
  \draw[oSpec] (bt) -- (t);
}
